@model AutoDealer.Data.Vehicle.Model


@using (Ajax.BeginForm("Create", "Models", FormMethod.Post, new AjaxOptions()
{
    OnSuccess = "success",
    UpdateTargetId = "listView"
}))
{
    @Html.HiddenFor(m=>m.ParentID)
    <div class="horizontal">
        <h4>سازنده جدید</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.ModelTitle, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ModelTitle, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="ذخیره" class="btn btn-success"/>
        </div>
    </div>

}
